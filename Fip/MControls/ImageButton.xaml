<UserControl x:Class="Fip.MControls.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fip.MControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="UControl">
    <Grid x:Name="grid">
        <Image x:Name="ButtonImage" Source="{Binding ImageSource, ElementName=UControl}" Opacity="{Binding NormalOp,ElementName=UControl}" MouseEnter="ButtonImage_MouseEnter" MouseLeave="ButtonImage_MouseLeave" MouseLeftButtonUp="ButtonImage_MouseLeftButtonUp"></Image>
    </Grid>
</UserControl>
