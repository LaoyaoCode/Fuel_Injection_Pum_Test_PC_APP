<UserControl x:Class="Fip.MControls.DeviceShortMessageLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fip.MControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="577" Width="577" Height="60" Loaded="UserControl_Loaded">
    
    <Grid x:Name="RootGrid" Background="{DynamicResource AppBackBrush}" MouseEnter="RootGrid_MouseEnter" MouseLeave="RootGrid_MouseLeave" MouseLeftButtonUp="RootGrid_MouseLeftButtonUp">
        
        <!--无图片图标时的文字图标-->
        <Border x:Name="NoImageIcon" Width="40" Height="40" CornerRadius="45" HorizontalAlignment="Left" Margin="20,0,0,0" Background="{DynamicResource LineBrush}">
            <TextBlock x:Name="InitialTB" Text="天" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="{DynamicResource AppBackBrush}"></TextBlock>
        </Border>
        <!--图片图标-->
        <Border x:Name="ImageIcon" Width="40" Height="40" CornerRadius="45" HorizontalAlignment="Left" Margin="20,0,0,0" BorderThickness="0" BorderBrush="{x:Null}">
            <Border.Effect>
                <BlurEffect/>
            </Border.Effect>
            <Border.Background>
                <ImageBrush x:Name="ImageIcon_Brush" ImageSource="/Fip;component/Images/ICON_TEST.png" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>
        
        <!--器件名字-->
        <TextBlock x:Name="DeviceName" Text="康明斯 6CTAA" Margin="80,0,130,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Foreground="{StaticResource NormalTextColor}" FontSize="14"/>

        <local:IconButton x:Name="ModifyButton" Visibility="Collapsed" ToolTip="修改配置" ButtonIcon="Feather" IconColor="{DynamicResource SpecialColor2}" Margin="0,20,90,20" HorizontalAlignment="Right"></local:IconButton>
        <local:IconButton x:Name="ExportButton" Visibility="Collapsed" ToolTip="导出配置" ButtonIcon="Firebase" IconColor="{DynamicResource SpecialColor}" HorizontalAlignment="Right" Margin="0,20,48,20" Width="20"></local:IconButton>
        <local:IconButton x:Name="RemoveButton" Visibility="Collapsed" ToolTip="删除器件" ButtonIcon="Close" IconColor="Red" HorizontalAlignment="Right" Margin="0,20,10,20" Width="18" Height="18"></local:IconButton>
    
    </Grid>
</UserControl>
