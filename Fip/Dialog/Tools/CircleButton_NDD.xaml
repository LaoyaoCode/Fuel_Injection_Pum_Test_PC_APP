<UserControl x:Class="Fip.Dialog.Tools.CircleButton_NDD"
             x:Name="userControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fip.Dialog.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="12" Width="12" Cursor="Hand">
    <Grid>
        <Border x:Name="Circle" CornerRadius="45" Background="{Binding NormalColor , ElementName=userControl}" MouseEnter="Circle_MouseEnter" MouseLeave="Circle_MouseLeave" MouseLeftButtonUp="Circle_MouseLeftButtonUp"/>
    </Grid>
</UserControl>
